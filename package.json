{
  "name": "mediafox-monorepo",
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "mediabunny": "^1.23.0",
    "typescript": "^5.7.0",
    "vitepress": "^2.0.0-alpha.12"
  },
  "private": true,
  "scripts": {
    "build": "bun run --filter @mediafox/core build && bun run --filter @mediafox/react build",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "biome lint --write ./packages",
    "format": "biome format --write ./packages",
    "check": "biome check --write ./packages",
    "ci": "biome ci ./packages",
    "dev": "bun run --filter @mediafox/core dev",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "workspaces": ["packages/*"],
  "dependencies": {
    "lucide-static": "^0.544.0"
  }
}